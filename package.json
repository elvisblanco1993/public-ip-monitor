{
  "name": "Registrac_Public_IP_Monitor",
  "version": "1.0.3",
  "description": "Registrac Public IP Monitor",
  "icon": "./app/assets/logo.png",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "dist:windows": "electron-builder --windows",
    "dist:linux": "electron-builder --linux",
    "dist:macos": "electron-builder --mac"
  },
  "author": "Registrac LLC <info@registrac.app> (https://registrac.page)",
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.1.0",
    "electron-builder": "^20.40.2",
    "electron-packager": "^14.0.6"
  },
  "build": {
    "appId": "app.registrac.ipmonitor",
    "win": {
      "target": "nsis",
      "icon": "./app/assets/icon.ico"
    },
    "linux": {
      "target": "appimage",
      "icon": "./app/assets/icon.png"
    },
    "mac": {
      "target": "default",
      "icon": "./app/assets/icon.icns",
      "category": "public.app-category.utilities"
    }
  }
}
